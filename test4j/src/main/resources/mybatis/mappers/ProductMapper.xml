<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lixin.mapper.ProductDao">

    <resultMap id="baseResultMap" type="com.lixin.model.Product">
        <id column="id" property="id" javaType="java.lang.Long" jdbcType="INTEGER"/>
        <result column="name" property="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result column="price" property="price" javaType="java.lang.Long" jdbcType="BIGINT"/>
    </resultMap>

    <insert id="insert">

        INSERT INTO product (name, price) VALUES (#{name}, #{price});
    </insert>


    <select id="select" resultType="com.lixin.model.Product">
        SELECT *
        FROM product
        WHERE id = #{id}
        LIMIT 1

    </select>

</mapper>